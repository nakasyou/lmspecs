{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Official name.",
      "examples": ["GPT-4o", "Gemini 2.0 Flash"]
    },
    "id": {
      "type": "string",
      "description": "Official ID",
      "examples": ["gemini-2.0-flash"]
    },
    "creator": {
      "type": "array",
      "description": "Creator of the model.",
      "items": {
        "type": "string",
        "enum": [
          "GOOGLE",
          "xAI",
          "OpenAI",
          "DeepSeek"
        ]
      }
    },
    "published": {
      "type": "string",
      "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}"
    },
    "states": {
      "type": "object",
      "patternProperties": {
        "[0-9]{4}-[0-9]{2}-[0-9]{2}": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "STABLE",
              "DEPRECATED",
              "EXPERIMENTAL"
            ]
          }
        }
      },
      "additionalProperties": false
    },
    "prev": {
      "type": "string",
      "description": "Prev version ID"
    },
    "lmarena_id": {
      "type": "string"
    },
    "cutoff_date": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}(-[0-9]{2})?$"
        },
        "sources": { "type": "array", "items": { "type": "string" } }
      }
    },
    "tokens_limit": {
      "type": "object",
      "properties": {
        "input": { "type": "number" },
        "output": { "type": "number" },
        "sources": { "type": "array", "items": { "type": "string" } }
      }
    },
    "license": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string",
          "enum": ["Proprietary", "MIT"]
        }
      }
    }
  }
}
