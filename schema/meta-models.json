{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {"type": "string"},
    "name": {
      "type": "string",
      "description": "Official name.",
      "examples": [
        "GPT-4o",
        "Gemini 2.0 Flash"
      ]
    },
    "id": {
      "type": "string",
      "description": "Official ID",
      "examples": [
        "gemini-2.0-flash"
      ]
    },
    "creators": {
      "type": "array",
      "description": "Creator of the model.",
      "items": {
        "type": "string",
        "enum": [
          "Google",
          "xAI",
          "OpenAI",
          "DeepSeek",
          "Anthropic",
          "Cohere",
          "CohereForAI"
        ]
      }
    },
    "published": {
      "type": "string",
      "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}"
    },
    "states": {
      "type": "object",
      "patternProperties": {
        "[0-9]{4}-[0-9]{2}-[0-9]{2}": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "STABLE",
              "DEPRECATED",
              "EXPERIMENTAL"
            ]
          }
        }
      },
      "additionalProperties": false
    },
    "prev": {
      "type": "string",
      "description": "Prev version ID"
    },
    "lmarena_id": {
      "type": "string"
    },
    "mmlu_pro_ids": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "cutoff_date": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}(-[0-9]{2})?$"
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "tokens_limit": {
      "type": "object",
      "properties": {
        "input": {
          "type": "number"
        },
        "output": {
          "type": "number"
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "license": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string",
          "enum": [
            "Proprietary",
            "MIT",
            "CC-BY-NC-4.0",
            "Apache-2.0"
          ]
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "value",
        "sources"
      ]
    },
    "links": {
      "properties": {
        "github": {
          "type": "string"
        },
        "huggingface": {
          "type": "string"
        }
      }
    },
    "logos": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "multimodalities": {
      "type": "object",
      "properties": {
        "input": {
          "type": "array",
          "items": { "enum": ["image", "text", "audio", "video"] }
        },
        "output": {
          "type": "array",
          "items": { "enum": ["text", "image", "audio", "video"] }
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "input",
        "output",
        "sources"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "id",
    "creators",
    "published",
    "states",
    "license",
    "multimodalities"
  ]
}