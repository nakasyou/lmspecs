{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "provider": {
      "type": "string",
      "enum": ["gemini_api", "OpenAI", "DeepSeek", "Groq"]
    },
    "model_id": {
      "type": "string",
      "description": "Model ID that this provided model uses."
    },
    "provided_at": {
      "type": "string",
      "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}"
    },
    "prev": { "type": "string" },
    "tokens_limit": {
      "type": "object",
      "properties": {
        "output": { "type": "number" },
        "sources": { "type": "array", "items": { "type": "string" } }
      }
    }
  },
  "required": ["provider", "provided_at", "model_id"]
}
